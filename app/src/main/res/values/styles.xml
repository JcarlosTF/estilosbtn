<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--    ESTILOS PARA LOS TEXTOS DE LOS BOTONES PRIMARIOS-->
                <!--    BOTON NORMAL Y PRESIOANDO-->
    <style name="btnStyleFontEnable">
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textSize">@dimen/fontSize</item>
        <item name="android:lineHeight">@dimen/lineHeight</item>
        <item name="android:letterSpacing">@dimen/letterSpacing</item>
        <item name="android:backgroundTint">@color/btnNormal</item>
        <item name="android:radius">@dimen/borderRadius</item>
    </style>
                    <!--    BOTON DESHABILITADO-->
    <style name="btnStyleFontDisabled">
        <item name="android:textColor">@color/colorFontDisabled</item>
        <item name="android:textSize">@dimen/fontSize</item>
        <item name="android:lineHeight">@dimen/lineHeight</item>
        <item name="android:letterSpacing">@dimen/letterSpacing</item>
        <item name="android:backgroundTint">@color/btnDisabled</item>
        <item name="android:radius">@dimen/borderRadius</item>
    </style>




    <!--    ESTILOS PARA LOS TEXTOS DE LOS BOTONES SECUNDARIOS-->
                <!--BOTON TEXTO SECUNDARIO NORMAL-->
    <style name="btnStyleFontDisabledSecondaryNormal">
        <item name="android:textColor">@color/colorFontSecondaryNormal</item>
        <item name="android:textSize">@dimen/fontSize</item>
        <item name="android:lineHeight">@dimen/lineHeight</item>
        <item name="android:letterSpacing">@dimen/letterSpacing</item>
        <item name="android:backgroundTint">@color/btnBackgroundSecondaryNormal</item>
        <item name="android:radius">@dimen/borderRadius</item>
    </style>
            <!--    BOTON TEXTO SECUNDARIO PRESIONADO-->
    <style name="btnStyleFontDisabledSecondaryPressed">
        <item name="android:textColor">@color/colorFontSecondaryPressed</item>
        <item name="android:textSize">@dimen/fontSize</item>
        <item name="android:lineHeight">@dimen/lineHeight</item>
        <item name="android:letterSpacing">@dimen/letterSpacing</item>
        <item name="android:textAlignment">center</item>
        <item name="android:backgroundTint">@color/btnBackgroundSecondaryPressed</item>
        <item name="android:radius">@dimen/borderRadius</item>
    </style>
            <!--    BOTON TEXTO SECUNDARIO DESHABILITADO-->
    <style name="btnStyleFontDisabledSecondaryDisabled">
        <item name="android:textColor">@color/colorFontDisabledSecondaryDisable</item>
        <item name="android:textSize">@dimen/fontSize</item>
        <item name="android:lineHeight">@dimen/lineHeight</item>
        <item name="android:letterSpacing">@dimen/letterSpacing</item>
        <item name="android:backgroundTint">@color/btnBackgroundSecondaryDisable</item>
        <item name="android:radius">@dimen/borderRadius</item>
    </style>


</resources>
